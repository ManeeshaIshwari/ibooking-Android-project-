<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7F808A"
    android:outlineSpotShadowColor="@color/black"
    tools:context=".MainActivity"
    tools:targetApi="s">



    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/a"
        android:scaleType="centerCrop"
        android:alpha="0.2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:fontFamily="sans-serif-black"
        android:text="iBooking"
        android:textAlignment="center"
        android:textColor="#1F4461"
        android:textSize="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="81dp"
        android:orientation="vertical"
        android:id="@+id/detail">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-black"
            android:text="Choose The Best Place For"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-black"
            android:text="Your Vacation"
            android:textColor="@color/black"
            android:textSize="19dp"
            />


    </LinearLayout>


    <FrameLayout
        android:layout_width="330dp"
        android:layout_height="345dp"
        android:layout_centerInParent="true"
        android:background="@drawable/login"
        android:orientation="horizontal">


        <!--        <ImageView-->

        <!--            android:layout_width="fill_parent"-->
        <!--            android:layout_height="fill_parent"-->
        <!--            android:alpha="0.5"-->
        <!--            android:scaleType="centerCrop"-->
        <!--            android:src="@drawable/b" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:alpha="4"
            android:fontFamily="sans-serif-light"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="#1D404C"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/username1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="92dp"
            android:ems="14"
            android:hint="Username"
            android:inputType="text"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="127dp" />


        <EditText
            android:id="@+id/password1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="159dp"
            android:ems="14"
            android:hint="Password"
            android:inputType="text"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="127dp" />


        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="240dp"
            android:backgroundTint="#0F2537"
            android:text="login"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="195dp"
            android:layout_height="26dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="290dp"
            android:alpha="4"
            android:fontFamily="sans-serif-light"
            android:text="Are you not Registered?"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="279dp"
            android:backgroundTint="@android:color/transparent"
            android:text="Click here"
            android:textColor="@android:color/white"
            android:textSize="9dp" />


    </FrameLayout>


</RelativeLayout>